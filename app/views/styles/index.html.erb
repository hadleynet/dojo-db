<h1>Listing Styles</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Description</th>
      <th>Order</th>
      <th>Active</th>
      <% if is_admin? %>
      <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @styles.each do |style| %>
      <tr>
        <td><%= style.id %></td>
        <td><%= style.description %></td>
        <td><%= style.order %></td>
        <td><%= style.active ? 'Y' : 'N' %></td>
        <% if is_admin? %>
        <td><%= link_to 'Edit', edit_style_path(style) %></td>
        <td><%= link_to 'Destroy', style, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if is_admin? %>
<br>

<%= link_to 'New Style', new_style_path %>
<% end %> 