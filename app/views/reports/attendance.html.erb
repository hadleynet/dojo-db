<h1>Attendance History as of <%= @date %></h1>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>6 months</th>
      <th>3 months</th>
      <th>1 month</th>
    </tr>
  </thead>

  <tbody>
    <% @attendance.each do |person_and_attendance| %>
      <% person, classes = person_and_attendance %>
      <tr class="<%= "highlight" if classes[2]==0 %>">
        <td><%= person.display_name %></td>
        <td><%= classes[0] %></td>
        <td><%= classes[1] %></td>
        <td><%= classes[2] %></td>
      </tr>
    <% end %>
  </tbody>
</table>