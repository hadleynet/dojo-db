<%- headers = ['Forename', 'Surname', 'Cert(s)', 'Cert Count', 'Belt(s)', 'Belt Count', 'Total Due'] -%>
<%= CSV.generate_line headers -%>
<%- @dues.each do |d| -%>
<%= CSV.generate_line([d[:person].forename, d[:person].surname, d[:certs].map {|c| c.rank.style_and_rank }.join(','), d[:certs].length, d[:belts].map {|c| c.rank.belt_color.description }.join(','), d[:belts].length, 20+d[:certs].length*5+d[:belts].length*10]).html_safe -%>
<%- end -%>