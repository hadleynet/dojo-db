<h3 class="no_print">Length of Service as of <%= @date.to_formatted_s(:us) %></h3>

<table class="table-condensed table-striped">
  <thead>
    <tr class="print_only">
      <th colspan="3">Length of Service as of <%= @date.to_formatted_s(:us) %></th>
    </tr>
    <tr>
      <th align="left">Name</th>
      <th>Start Date</th>
      <th>Time Since Start</th>
      <th>Months Active<sup>*</sup></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td>
          <%= link_to person[:person].display_name, person[:person] %>
        </td>
        <td><%= person[:start_date].to_formatted_s(:us) %></td>
        <td><%= distance_of_time_in_words(person[:start_date], @date) %></td>
        <td><%= person[:months] / 12 %> years, <%= person[:months] % 12 %> months</td>
      </tr>
    <% end %>
  </tbody>
</table>

<p class="small"><sup>*</sup> Attended at least one class during the month</p>