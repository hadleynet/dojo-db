<h1 class="no_print">Length of Service as of <%= @date.to_formatted_s(:us) %></h1>

<table border="1">
  <thead>
    <tr class="print_only">
      <th colspan="3">Length of Service as of <%= @date.to_formatted_s(:us) %></th>
    </tr>
    <tr>
      <th align="left">Name</th>
      <th>Start Date</th>
      <th>Length of Service</th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td>
          <%= link_to person[:person].display_name, person[:person] %>
        </td>
        <td><%= person[:start_date] %></td>
        <td><%= distance_of_time_in_words(person[:start_date], @date) %></td>
      </tr>
    <% end %>
  </tbody>
</table>