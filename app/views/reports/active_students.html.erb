<h3 class="no_print">Active Students as of <%= @date.to_formatted_s(:us) %></h3>

<table class="table-condensed table-striped">
  <thead>
    <tr class="print_only">
      <th colspan="<%= 2+@styles.length %>">Active Students as of <%= @date.to_formatted_s(:us) %></th>
    </tr>
    <tr>
      <th>Name</th>
      <th class="text-center">Classes<br/>(3 Months)</th>
      <% @styles.each do |style| %>
      <th class="text-center"><%= style.description %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td>
          <%= link_to person[:person].display_name, person[:person] %>
        </td>
        <td class="text-center"><%= person[:classes_in_last_three_months] %></td>
        <% person[:latest_awards].each do |award| %>
          <td><%= award ? "#{award.rank.name} (#{award.date.to_formatted_s(:us)})" : "" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>