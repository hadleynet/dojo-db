<!DOCTYPE html>
<html>
<head>
  <title>Souhegan Valley Karate Club</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>                        
        </button>
        <a href="#" class="pull-left"><%= image_tag("svkclogo.png", :alt => "SVKC logo") %></a>
        <a class="navbar-brand" href="#">SVKC</a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><a href="#"><span class="glyphicon glyphicon-user"></span> <%= current_user.email %></a></li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <span class="glyphicon glyphicon-log-out"></span> Logout
            <% end %>
          </li>
        <% else %>
          <li><a href="<%= new_user_session_path %>"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="container no_print">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>     
    </div>
  
    <%= yield %>
  </div>
</body>
</html>
