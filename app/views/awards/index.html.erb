<h2>Promotions</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Person</th>
      <th>Style</th>
      <th>Rank</th>
      <% if is_admin? %>
      <th class="no_print">Actions</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @awards.each do |award| %>
      <tr>
        <td><%= award.date %></td>
        <td><%= award.person.forename %> <%= award.person.surname %></td>
        <td><%= award.rank.style.description %></td>
        <td><%= award.rank.name %></td>
        <% if is_admin? %>
        <td class="no_print">
          <%= link_to edit_award_path(award), :class => 'btn btn-sm btn-warning' do %>
            <i class="glyphicon glyphicon-pencil"></i> Edit
          <% end %>
          <%= link_to award_path(award), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-sm btn-danger' do %>
            <i class="glyphicon glyphicon-remove"></i> Delete
          <% end %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if is_admin? %>
<%= link_to new_award_path, :class => 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Promotion
<% end %>
<% end %>
