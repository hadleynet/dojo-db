<% if @person %>
<h1>Promote <%= @person.display_name %></h1>

<p>Current rank(s): <%= @current_ranks.collect {|award| award.rank.style_and_rank}.join(", ") %></p>

<%= render 'person_form' %>

<p><%= link_to "Back to #{@person.forename}", person_path(@person) %> |
<%= link_to 'All Students', people_path %></p>

<% else %>
<h1>New Award</h1>

<%= render 'form' %>

<%= link_to 'Back', awards_path %>
<% end %>