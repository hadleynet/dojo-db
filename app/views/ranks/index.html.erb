<p id="notice"><%= notice %></p>

<h1>Listing Ranks</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Style Id</th>
      <th>Name</th>
      <th>Translation</th>
      <th>Order</th>
      <th>Active</th>
      <th>Class delta</th>
      <th>Next rank test</th>
      <th>Belt color</th>
      <th>Stripe color</th>
      <th>Stripe count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ranks.each do |rank| %>
      <tr>
        <td><%= rank.id %></td>
        <td><%= rank.style_id %></td>
        <td><%= rank.name %></td>
        <td><%= rank.translation %></td>
        <td><%= rank.order %></td>
        <td><%= rank.active %></td>
        <td><%= rank.class_delta %></td>
        <td><%= rank.next_rank_test_id %></td>
        <td><%= rank.belt_color_id %></td>
        <td><%= rank.stripe_color_id %></td>
        <td><%= rank.stripe_count %></td>
        <td><%= link_to 'Show', rank %></td>
        <td><%= link_to 'Edit', edit_rank_path(rank) %></td>
        <td><%= link_to 'Destroy', rank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

